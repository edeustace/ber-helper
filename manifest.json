{
  "manifest_version": 2,

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png" },


  "name": "ber-helper",
  "description": "This extension adds additional ber information to myhome.ie and daft.ie property pages",
  "version": "1.1",
  "permissions": [
    "http://daft.ie/*",
    "http://www.myhome.ie/*",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.daft.ie/*", "http://www.myhome.ie/*"],
      "js": [
        "js/ber-helper.js",
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/remodal/dist/jquery.remodal.min.js"
        ],
      "css" : [
          "bower_components/remodal/dist/jquery.remodal.css",
          "css/main.css"
        ],
      "run_at" : "document_start"
    },
    {
      "matches": ["http://www.daft.ie/*"],
      "js": ["js/ber-daft.js"],
      "css" : ["css/ber-daft.css"],
      "run_at" : "document_start"
    },
    {
      "matches": ["http://www.myhome.ie/*"],
      "js": ["js/ber-myhome.js"],
      "css": ["css/ber-myhome.css"],
      "run_at" : "document_start"
    }
  ]
}
